
@model IEnumerable<WebHoly.Models.HolySubscription>

<link href="~/css/PersonalArea.css" rel="stylesheet" />
@foreach (var item in Model)
{
<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-6">
                <div class="about-text go-to">
                    <h3 class="dark-color">איזור אישי</h3>
                    <h6 class="theme-color lead">שלום @item.FirstName</h6>
                    <div class="row about-list">
                        <div class="col-md-6">
                            <div class="media">
                                <label>כתובת מייל</label>
                                <p>@item.User.Email</p>
                            </div>
                            <div class="media">
                                <label> פלאפון</label>
                                <p>@item.Phone</p>
                            </div>
                            <div class="media">
                                <label>כתובת</label>
                                <p>@item.Address</p>
                            </div>
                            <div class="media">
                                <label>עיר</label>
                                <p>@item.City</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                <label>קהילה</label>
                                <p>@item.Community</p>
                            </div>
                            <div class="media">
                                <label>טוקן</label>
                                <p>@item.TokenNumber</p>
                            </div>
                            <div class="media">
                                <label>4 ספרות</label>
                                <p>@item.Last4Digits</p>
                            </div>
                            <div class="media">
                                <label>תהליך תחילת מנוי </label>
                                <p>@item.CreatedDate</p>
                            </div>
                        </div>
                    </div>
                    <a asp-action="PersonalAreaEdit" asp-route-id="@item.Id">ערוך</a>
                </div>
            </div>

            <div class="col-lg-6">

                <div class="about-avatar">
                    <img src="~/img/Profile.jpg" />
                </div>
            </div>
        </div>
    </div>
    <div class="RevenuSt">
        <h4>חיובים במערכת</h4>
    </div>
    <table style="width:100%;margin:20px 10px 5px 25px;">
        <tr>
            <th>תאריך חיוב</th>
            <th>סכום חיוב</th>
            <th>מספר קבלה</th>
        </tr>
        @foreach (var payments in item.Payment)
        {
            <tr>
                <td>@payments.PaymentDate</td>
                <td>@payments.Price</td>
                <td>@payments.ReceptionNumber</td>
            </tr>
        }
    </table>
</section>
}