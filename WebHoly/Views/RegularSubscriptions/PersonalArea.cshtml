
@model WebHoly.Models.RegularSubscription

<link href="~/css/PersonalArea.css" rel="stylesheet" />

<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-6">
                <div class="about-text go-to">
                    <h3 class="dark-color">איזור אישי</h3>
                    <h6 class="theme-color lead">שלום @(!string.IsNullOrEmpty(Model.FirstName) ? Model.FirstName : "" )</h6>
                    <div class="row about-list">
                        <div class="col-md-6">
                            <div class="media">
                                <label> גיל</label>
                                <p>@Model.Age</p>
                            </div>
                            <div class="media">
                                <label>כתובת מייל</label>
                                <p>@Model.User.Email</p>
                            </div>
                            <div class="media">
                                <label>מגדר</label>
                                <p>
                                    @(Model.Gender == false? "זכר" : "נקבה")
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                <label>קהילה</label>
                                <p>@Model.Community</p>
                            </div>
                            <div class="media">
                                <label>תאריך הרשמה</label>
                                <p>@Model.CreatedDate</p>
                            </div>
                            <div class="media">
                                <label> התחברות אחרונה </label>
                                <p>@Model.User.LastLogin</p>
                            </div>

                        </div>
                    </div>
                    <a asp-action="PersonalAreaEdit" asp-route-id="@Model.Id">ערוך</a> 

                </div>
            </div>
            <div class="col-lg-6">
                @if (!Model.Gender)
                {
                    <div class="about-avatar">
                        <img src="https://bootdey.com/img/Content/avatar/avatar7.png" title="" alt="">
                    </div>
                }
                else
                {
                    <div class="about-avatar">
                        <img src="https://bootdey.com/img/Content/avatar/avatar8.png" title="" alt="">
                    </div>
                }

            </div>
        </div>
    </div>
</section>


