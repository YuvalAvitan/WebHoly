@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
    <li class="nav-item">
        @if (User.IsInRole("HolyUser"))
        {
            <a class="nav-link text-dark" asp-area="" asp-controller="HolySubscriptions" asp-action="PersonalArea"> איזור אישי</a>
        }
        else if (User.IsInRole("RegularUser"))
        {
            <a class="nav-link text-dark" asp-area="" asp-controller="RegularSubscriptions" asp-action="PersonalArea"> איזור אישי</a>

        }
    </li>
      

        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">התנתקות</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="navbar-brand" asp-area="" asp-controller="RegularSubscriptions" asp-action="Create">הרשמה</a>
        </li>
        <li class="nav-item">
            <a class="navbar-brand" asp-area="" asp-controller="HolySubscriptions" asp-action="Create">הרשמה עבור בתי כנסת</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">התחבר</a>
        </li>
    }
</ul>
