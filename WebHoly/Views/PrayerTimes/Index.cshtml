
@model WebHoly.Models.PrayerTimes

@{
    ViewData["Title"] = "לוח תפילות";
}
<h2>
    @ViewData["Title"]

</h2>
<div>
    <hr />
    <dl class="row">
        @if (Model != null)
        { 
            <dt class="col-sm-2 m-lg-3">
                @Html.DisplayNameFor(model => model.ShacharitPrayer)
            </dt>
        <dd class="col-sm-10  m-lg-3">
            @Model.ShacharitPrayer.ToString(@"hh\:mm")
        </dd>
        <dt class="col-sm-2 m-lg-3">
            @Html.DisplayNameFor(model => model.InauguralPrayer)
        </dt>
        <dd class="col-sm-10  m-lg-3">
            @Model.InauguralPrayer.ToString(@"hh\:mm")
        </dd>
        <dt class="col-sm-2 m-lg-3">
            @Html.DisplayNameFor(model => model.MaarivPrayer)
        </dt>
        <dd class="col-sm-10  m-lg-3">
            @Model.MaarivPrayer.ToString(@"hh\:mm")

        </dd>
        }

    </dl>
</div>
<div>
    @if (Model != null)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">ערוך</a>
    }
    else
    {
        <a asp-action="Create" >הוספת זמני תפילות</a>

    }
</div>

